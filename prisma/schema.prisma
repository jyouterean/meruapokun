// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Lead {
  id            String         @id @default(cuid())
  email         String         @unique
  companyName   String?
  contactName   String?
  position      String?
  industry      String?
  websiteUrl    String?
  memo          String?        @db.Text
  tags          String[]
  status        LeadStatus     @default(NEW)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  emailMessages EmailMessage[]
  events        Event[]
  sendQueues    SendQueue[]
  unsubscribes  Unsubscribe[]

  @@index([status])
  @@index([email])
}

enum LeadStatus {
  NEW
  CONTACTED
  REPLIED
  BOUNCED
  UNSUBSCRIBED
  DO_NOT_CONTACT
}

model Campaign {
  id                String         @id @default(cuid())
  name              String
  subjectTemplate   String         @db.Text
  bodyTemplate      String         @db.Text
  fromName          String
  fromEmail         String
  signature         String?        @db.Text
  unsubscribeText   String?        @db.Text
  status            CampaignStatus @default(DRAFT)
  scheduleStartAt   DateTime?
  scheduleEndAt     DateTime?
  workingHoursStart Int?           // 0-23
  workingHoursEnd   Int?           // 0-23
  timezone          String         @default("Asia/Tokyo")
  rateLimitPerMin   Int            @default(10)
  rateLimitPerDay   Int            @default(50)
  randomDelayMin    Int            @default(20) // seconds
  randomDelayMax    Int            @default(90) // seconds
  useAI             Boolean        @default(false)
  aiPrompt          String?        @db.Text
  aiTone            String?        @default("professional")
  aiProhibitedWords String[]       // NGワード
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  createdBy         String
  emailMessages     EmailMessage[]
  sendQueues        SendQueue[]
  events             Event[]
  auditLogs          AuditLog[]

  @@index([status])
  @@index([createdAt])
}

enum CampaignStatus {
  DRAFT
  TESTING
  RUNNING
  PAUSED
  COMPLETED
  STOPPED
}

model EmailMessage {
  id            String      @id @default(cuid())
  campaignId    String
  leadId        String
  messageId     String?     @unique // RFC 5322 Message-ID
  inReplyTo     String?     // RFC 5322 In-Reply-To
  references    String?     @db.Text // RFC 5322 References
  threadKey     String?     // 独自スレッドキー
  direction     Direction   @default(OUTBOUND)
  subject       String      @db.Text
  htmlBody      String?     @db.Text
  textBody      String?     @db.Text
  fromEmail     String
  fromName      String?
  toEmail       String
  toName        String?
  status        EmailStatus @default(QUEUED)
  sentAt        DateTime?
  deliveredAt   DateTime?
  errorMessage  String?     @db.Text
  providerId    String?     // SendGrid/SESのメッセージID
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  campaign      Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  lead          Lead        @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([campaignId, leadId])
  @@index([threadKey])
  @@index([messageId])
  @@index([status])
  @@index([createdAt])
}

enum Direction {
  INBOUND
  OUTBOUND
}

enum EmailStatus {
  QUEUED
  SENT
  DELIVERED
  FAILED
  BOUNCED
}

model SendQueue {
  id            String      @id @default(cuid())
  campaignId    String
  leadId        String
  emailMessageId String?    // 送信済みの場合は紐付け
  scheduledAt   DateTime    @default(now())
  nextRetryAt   DateTime?
  retryCount    Int         @default(0)
  maxRetries    Int         @default(3)
  status        QueueStatus @default(PENDING)
  errorMessage  String?     @db.Text
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  campaign      Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  lead          Lead        @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([status, scheduledAt])
  @@index([campaignId])
  @@index([leadId])
}

enum QueueStatus {
  PENDING
  PROCESSING
  SENT
  FAILED
  CANCELLED
}

model Event {
  id            String      @id @default(cuid())
  campaignId    String
  leadId        String
  emailMessageId String?
  type          EventType
  data          Json?       // プロバイダからの生データ
  userAgent     String?
  ipAddress     String?
  createdAt     DateTime    @default(now())
  campaign      Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  lead          Lead        @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([campaignId, leadId, type, createdAt])
  @@index([type, createdAt])
  @@index([emailMessageId])
}

enum EventType {
  OPEN
  CLICK
  BOUNCE
  SPAM_REPORT
  UNSUBSCRIBE
  REPLY
  DELIVERED
  DEFERRED
  DROPPED
}

model Unsubscribe {
  id        String   @id @default(cuid())
  email     String
  leadId    String?
  token     String   @unique
  reason    String?
  createdAt DateTime @default(now())
  lead      Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)

  @@unique([email])
  @@index([token])
  @@index([email])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // 操作種別
  entityType String? // 対象エンティティタイプ
  entityId  String?  // 対象エンティティID
  campaignId String?
  payload   Json?    // 詳細情報（プロンプト含む）
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  campaign  Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([campaignId, createdAt])
  @@index([entityType, entityId])
}

